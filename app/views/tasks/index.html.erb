<div class="container ml-3 p-2">
<h1>All My Tasks</h1>
<br>

<% @tasks.each do |task| %>
<ul class="list-group">
  <li class="list-group-item">
  <input class="form-check-input" type="checkbox" id="defaultCheck1" name="completed" <%= "checked" if task[:completed] %>>
  <%= link_to task.title, task_path(task) %>
</li>
<% end %>
</ul>
<br>
<br>
<%= link_to "Add new task", tasks_new_path %>
</div>
